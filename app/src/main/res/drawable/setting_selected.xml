<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" /> <!-- Background color when selected -->
        </shape>
        <color android:color="@color/white" /> <!-- Text and icon color when selected -->
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color when not selected -->
        </shape>
        <color android:color="@color/colorPrimary" /> <!-- Text and icon color when not selected -->
    </item>
</selector>
